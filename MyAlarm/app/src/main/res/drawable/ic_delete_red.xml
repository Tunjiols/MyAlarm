            android:shape="rectangle">
            <corners android:radius="@dimen/_2sdp"/>
            <size android:height="@dimen/_4sdp"
                android:width="@dimen/_5sdp"/>
            <solid android:color="@color/grey_200"/>
        </shape>
    </item>
</layer-list>