            android:shape="oval">
            <size android:height="@dimen/_20sdp"
                android:width="@dimen/_20sdp"/>
            <solid android:color="@color/red_500"/>
            <stroke android:color="@color/red_300"
                android:width="@dimen/_1sdp"/>
