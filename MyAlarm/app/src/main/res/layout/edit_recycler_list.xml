<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_900"
    android:padding="@dimen/margin_small">

    <ImageView
        android:id="@+id/alarm_deleteicon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_delete" />

    <TextView
        android:id="@+id/alarm_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/alarm_deleteicon"
        android:layout_toRightOf="@+id/alarm_deleteicon"
        android:paddingLeft="@dimen/margin_small"
        android:paddingStart="@dimen/margin_small"
        android:text="05:55"
        android:textColor="@color/grey_200"
        android:textSize="50sp"/>
    <TextView
        android:id="@+id/alarm_label"
        android:layout_below="@+id/alarm_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_big"
        android:paddingLeft="@dimen/padding_big"
        android:text="Alarm,"
        android:textColor="@color/grey_200"/>
    <TextView
        android:id="@+id/alarm_date"
        android:layout_below="@+id/alarm_time"
        android:layout_toRightOf="@+id/alarm_label"
        android:layout_toEndOf="@+id/alarm_label"
        android:paddingStart="@dimen/margin_small"
        android:paddingLeft="@dimen/margin_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Every Tuesday"
        android:textColor="@color/grey_200"/>

    <ImageView
        android:id="@+id/alarm_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_next"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/grey_200" />
</RelativeLayout>