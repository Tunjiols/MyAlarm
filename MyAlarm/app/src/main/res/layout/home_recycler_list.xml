<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_900"
    android:padding="@dimen/margin_small">

    <TextView
        android:id="@+id/alarm_hour"
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="05:"
        android:textColor="@color/grey_200"
        android:textSize="50sp"/>

    <TextView
        android:id="@+id/alarm_min"
        android:paddingStart="@dimen/_2sp"
        android:paddingLeft="@dimen/_2sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/alarm_hour"
        android:layout_toRightOf="@+id/alarm_hour"
        android:text="55"
        android:textColor="@color/grey_200"
        android:textSize="50sp"/>

    <TextView
        android:id="@+id/alarm_snooze"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:paddingStart="@dimen/_2sp"
        android:paddingEnd="@dimen/_2sp"
        android:layout_margin="@dimen/_5sdp"
        android:layout_toEndOf="@+id/alarm_min"
        android:layout_toRightOf="@+id/alarm_min"
        android:background="@drawable/ic_snooze_backgd"
        android:text="snooze"
        android:textColor="@color/white"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/alarm_label"
        android:layout_below="@+id/alarm_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm,"
        android:textColor="@color/grey_200"/>

    <TextView
        android:id="@+id/alarm_date"
        android:layout_below="@+id/alarm_hour"
        android:layout_toRightOf="@+id/alarm_label"
        android:layout_toEndOf="@+id/alarm_label"
        android:paddingStart="@dimen/margin_small"
        android:paddingLeft="@dimen/margin_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Every Tuesday"
        android:textColor="@color/grey_200"/>

    <ImageButton
        android:id="@+id/alarm_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_status_off"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/grey_900" />
</RelativeLayout>